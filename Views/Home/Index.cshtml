@model Player

<div class="container">
    <div class="row">
        <div class ="col-3">
            <h1>Registration</h1>
            <form asp-action="TryRegister" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="Username"></span>
                    <label asp-for="Username">User Name</label>
                    <input asp-for="Username" class="form-control">
                </div>  
                <div class="form-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
        <div class ="col-2">
        </div>
        <div class ="col-3">
            <partial name="Login.cshtml" />
        </div>
    </div>
</div>