@model IndexViewModel
<div class="container-fluid" id="Home-bg">
    <div class="row mt-5">
        <div class ="col">
        </div>
        <div class ="col">
            <h1>Registration</h1>
            <form asp-action="TryRegister" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="RegPlayer.Username"></span>
                    <label asp-for="RegPlayer.Username">User Name</label>
                    <input asp-for="RegPlayer.Username" class="form-control">
                </div>  
                <div class="form-group">
                    <span asp-validation-for="RegPlayer.Password"></span>
                    <label asp-for="RegPlayer.Password">Password</label>
                    <input asp-for="RegPlayer.Password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="RegPlayer.Confirm"></span>
                    <label asp-for="RegPlayer.Confirm">Confirm Password</label>
                    <input asp-for="RegPlayer.Confirm" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
        <div class="col">
        </div>
        <div class ="col">
            <h1>Login</h1>
            <form asp-action="TryLogin" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="LogPlayer.Username"></span>
                    <label asp-for="LogPlayer.Username">User Name</label>
                    <input asp-for="LogPlayer.Username" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="LogPlayer.Password"></span>
                    <label asp-for="LogPlayer.Password">Password</label>
                    <input asp-for="LogPlayer.Password" class="form-control">
                </div>
                <button type="submit" class="btn btn-success">Login</button>
            </form>
        </div>
        <div class ="col">
            
        </div>
    </div>
</div>