<div class="container">
    <div class="row">
        <div class="col">
            <div class="logout">
                <a href="logout"><button type="button" class="btn btn-success">Logout</button></a>
            </div>
            @if(@ViewBag.ThisPlayer.CurrHand == null)
            {
                <table class="Chip">
                    <tr>
                        <td ALIGN=CENTER><a href="/bet/5"><img src="images/Chip_5.png" alt="5 dollar" height="80" width="80"></a></td>
                        <td ALIGN=CENTER><a href="/bet/10"><img src="images/Chip_10.png" alt="5 dollar" height="80" width="80"></a></td>
                        <td ALIGN=CENTER><a href="/bet/25"><img src="images/Chip_25.png" alt="5 dollar" height="80" width="80"></a></td>
                        <td ALIGN=CENTER><a href="/bet/50"><img src="images/Chip_50.png" alt="5 dollar" height="80" width="80"></a></td>
                        <td ALIGN=CENTER><a href="/bet/100"><img src="images/Chip_100.png" alt="5 dollar" height="80" width="80"></a></td>
                        <td>
                            <a href="/submitBet"><button type="button" class="btn btn-success">Bet</button></a>
                        </td>
                    </tr>
                </table>
            }
            @if(@ViewBag.ThisPlayer.CurrHand != null)
            {
                @if(ViewBag.EndGame == "true")
                {
                    <table class="restart">
                        <tr>
                            <td ALIGN=CENTER><a href="/endgame"><button type="button" class="btn-lg btn-success">Play Again</button></a></td>
                        </tr>
                    </table>
                } 
                else
                {
                    <table class="option">
                        <tr>
                            <td ALIGN=CENTER><a href="/hit"><button type="button" class="btn-lg btn-success">Hit</button></a></td>
                            <td ALIGN=CENTER><a href="/StandCurrHand"><button type="button" class="btn-lg btn-success">Stand</button></a></td>
                            <td ALIGN=CENTER><a href="/double"><button type="button" class="btn-lg btn-success">Double</button></a></td>
                            <td ALIGN=CENTER><a href="/split"><button type="button" class="btn-lg btn-success">Split</button></a></td> 
                        </tr>
                    </table>
                }
            }
        
        </div>
        <div class="align-center">
            @if(@ViewBag.ThisPlayer.CurrHand != null)
            {
                @if(@ViewBag.ThisPlayer.CurrHand.PlayerCards.Count > 0)
                { 
                    <table class="Dealer">
                        <tr>
                            @for(var i=0; i<@ViewBag.DealerCards.Count; i++)
                            {
                                @if(i == 0)
                                {
                                    @if(@ViewBag.Stand == null)
                                    {
                                        <td ALIGN=CENTER><IMG SRC="images/dealer.png"></TD>
                                    } 
                                    else 
                                    {
                                        <td ALIGN=CENTER><IMG SRC="images/@ViewBag.DealerCards[i]"></TD>
                                    }
                                }
                                else
                                {
                                    <td ALIGN=CENTER><IMG SRC="images/@ViewBag.DealerCards[i]"></TD>
                                }
                            }
                        </tr>
                    </table>
                    <div class="Message">
                        @if(@ViewBag.Message!=null)
                        {
                            <h6>@ViewBag.Message</h6>
                        }
                    </div>
                    <table class="Player">
                        <tr>
                            @foreach(var card in @ViewBag.PlayerCards)
                            {
                                <td ALIGN=CENTER><IMG SRC="images/@card"></TD>
                            }
                        </tr>
                    </table>
                }
            }
        </div>
        <div class="col">
            
        </div>
    </div>
    <div class="row">
        <div class="money">
                <h1>@ViewBag.ThisPlayer.Money</h1>
            </div>
    </div>
</div>